<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.gallery.GalleryFragment">

    <TextView
        android:id="@+id/idTvPalavraEmIngles"
        android:layout_width="183dp"
        android:layout_height="48dp"
        android:fontFamily="sans-serif-black"
        android:text="Animal"
        android:textAlignment="center"
        android:textSize="24sp"
        app:flow_horizontalAlign="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07" />

    <Button
        android:id="@+id/idBtnConhecer"
        android:layout_width="343dp"
        android:layout_height="65dp"
        android:layout_marginTop="30dp"
        android:onClick="order"
        android:text="Vamos conhecer os nomes dos animais em inglês?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idTvPalavraEmPortugues" />

    <ImageView
        android:id="@+id/idImImagem"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idTvPalavraEmIngles"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/idTvPalavraEmPortugues"
        android:layout_width="214dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="Tradução"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idImImagem" />
</androidx.constraintlayout.widget.ConstraintLayout>